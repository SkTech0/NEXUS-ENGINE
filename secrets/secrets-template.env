# Nexus Engine - Secrets Template (NO REAL SECRETS)
#
# Copy to a secure location (do NOT commit):
#   cp secrets/secrets-template.env .env.local
#
# Precedence model (highest wins):
#   defaults → env pack → secrets providers → runtime overrides
#
# Environment selection
NEXUS_ENV=local

# ---------------------------------------
# App / data
# ---------------------------------------
# .NET-style binding: ConnectionStrings__Primary maps to ConnectionStrings:Primary
ConnectionStrings__Primary=

# ---------------------------------------
# Secrets provider selection
# ---------------------------------------
# Provider: env | vault | azurekeyvault | awssecretsmanager
Secrets__Provider=env

# ---------------------------------------
# HashiCorp Vault (recommended for k8s)
# ---------------------------------------
VAULT_ADDR=
VAULT_TOKEN=
VAULT_K8S_ROLE=
VAULT_KV_PREFIX=nexus-engine/local

# ---------------------------------------
# Azure Key Vault
# ---------------------------------------
AZURE_KEYVAULT_URL=
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=

# ---------------------------------------
# AWS Secrets Manager
# ---------------------------------------
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# OpenAI
OPENAI_API_KEY=

