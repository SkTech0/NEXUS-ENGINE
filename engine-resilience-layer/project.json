{
  "name": "engine-resilience-layer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "engine-resilience-layer/src",
  "tags": ["scope:resilience", "domain:engine"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/engine-resilience-layer",
        "main": "engine-resilience-layer/src/index.ts",
        "tsConfig": "engine-resilience-layer/tsconfig.json"
      },
      "configurations": {
        "production": {}
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "engine-resilience-layer/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": { "ci": true }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["engine-resilience-layer/**/*.ts"]
      }
    }
  }
}
