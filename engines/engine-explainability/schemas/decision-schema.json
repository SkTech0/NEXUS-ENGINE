{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nexus-engine.io/schemas/decision-schema.json",
  "title": "EEL Decision Explanation",
  "description": "Decision explanation structure",
  "type": "object",
  "required": ["explanation_id", "trace_id", "target_type", "target_ref", "generated_at", "locale", "audience", "decision_type", "outcome_ref", "outcome_type", "reasoning_summary", "contribution_summary", "narrative"],
  "properties": {
    "explanation_id": { "type": "string" },
    "trace_id": { "type": "string" },
    "target_type": { "const": "decision" },
    "target_ref": { "type": "string", "description": "decision_id" },
    "generated_at": { "type": "string", "format": "date-time" },
    "locale": { "type": "string" },
    "audience": { "type": "string", "enum": ["human", "auditor", "regulator", "enterprise", "customer", "investor", "engineer"] },
    "decision_type": { "type": "string", "enum": ["binary", "multi_way", "continuous", "delegation", "fallback"] },
    "outcome_ref": { "type": "string" },
    "outcome_type": { "type": "string", "enum": ["approve", "deny", "refer", "defer", "custom"] },
    "branch_taken": { "type": ["string", "null"] },
    "input_refs": { "type": "array", "items": { "type": "string" } },
    "reasoning_path_ref": { "type": "string" },
    "reasoning_summary": { "type": "string" },
    "reasoning_steps": { "type": "array", "items": { "type": "object" } },
    "cause_chain_ref": { "type": ["string", "null"] },
    "cause_summary": { "type": ["string", "null"] },
    "contribution_breakdown": { "type": "array", "items": { "type": "object" } },
    "contribution_summary": { "type": "string" },
    "confidence": { "type": ["number", "null"], "minimum": 0, "maximum": 1 },
    "confidence_explanation": { "type": ["string", "null"] },
    "uncertainty": { "type": ["number", "null"], "minimum": 0, "maximum": 1 },
    "uncertainty_explanation": { "type": ["string", "null"] },
    "narrative": { "type": "string" },
    "narrative_short": { "type": ["string", "null"] },
    "narrative_audit": { "type": ["string", "null"] },
    "narrative_regulator": { "type": ["string", "null"] }
  },
  "additionalProperties": false
}
